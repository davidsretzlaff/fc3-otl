{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft": "Fatal",
      "Microsoft.AspNetCore": "Fatal",
      "Microsoft.Extensions": "Fatal",
      "Microsoft.Hosting": "Fatal",
      "Microsoft.Data": "Fatal",
      "System": "Fatal",
      "Dapper": "Fatal",
      "Customer.API": "Information",
      "Customer.Application": "Information",
      "Customer.Domain": "Information"
    },
    "File": {
      "Path": "logs/app.log",
      "Append": true,
      "MinLevel": "Information",
      "FileSizeLimitBytes": 10485760,
      "MaxRollingFiles": 10
    }
  },
  "AllowedHosts": "*"
}
