{
  "dashboard": {
    "id": null,
    "title": "üö® Error Investigation Dashboard",
    "tags": ["logs", "debugging"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "üî¥ Recent Errors (Last 30min)",
        "type": "logs",
        "targets": [
          {
            "expr": "{job=\"containers\"} |~ \"(?i)(error|err|failed|exception)\"",
            "refId": "A",
            "datasource": {
              "type": "loki",
              "uid": "loki"
            }
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "üìà Error Count (Last 5min)",
        "type": "stat",
        "targets": [
          {
            "expr": "count_over_time({job=\"containers\"} |~ \"(?i)error\" [5m])",
            "refId": "A",
            "datasource": {
              "type": "loki",
              "uid": "loki"
            }
          }
        ],
        "gridPos": {"h": 4, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 3,
        "title": "üîç Correlation ID Search",
        "type": "logs",
        "targets": [
          {
            "expr": "{job=\"containers\"} |= \"correlation_id\"",
            "refId": "A",
            "datasource": {
              "type": "loki",
              "uid": "loki"
            }
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 12}
      },
      {
        "id": 4,
        "title": "üìß Customer Email Search",
        "type": "logs",
        "targets": [
          {
            "expr": "{job=\"containers\"} |~ \"@[a-zA-Z0-9.-]+\\\\.[a-zA-Z]{2,}\"",
            "refId": "A",
            "datasource": {
              "type": "loki",
              "uid": "loki"
            }
          }
        ],
        "gridPos": {"h": 6, "w": 24, "x": 0, "y": 20}
      }
    ],
    "time": {"from": "now-30m", "to": "now"},
    "refresh": "5s"
  }
} 